@using GUI.Models.DTOs.Order_DTO
@using System.Globalization
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@model IEnumerable<OrderItem>

<div class="p-3">
    <table class="table">
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                    <td style="width: 15%">
                        <img src="@item.ProductImage" class="img-thumbnail" style="width: 50%" />
                    </td>
                    <td>@item.ProductName</td>
                    <td>@item.Price.ToString("C", CultureInfo.GetCultureInfo("vi-VN"))</td>
                    <td>
                        <input class="form-control" min="1" value="@item.Quantity" type="number" onchange="updateQuantity(event, '@item.Id')" />
                    </td>
                    <td>
                        <button class="btn btn-danger" onclick="removeItem('@item.Id')">Xoá</button>
                    </td>
            </tr>
            }
        </tbody>
    </table>
</div>
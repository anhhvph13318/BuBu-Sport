@using GUI.Models.DTOs.Order_DTO
@model ShippingInfo

<div class="mb-3 d-flex align-items-center">
    <label class="form-label text-nowrap me-2">Nơi nhận hàng</label>
    <select onchange="isCustomerTakeYourSelfChange()" value="@(Model.IsCustomerTakeYourSelf ? 0 : 1)"
        id="shippingLocation" class="form-select">
        <option value="0">Khách nhận tại quầy</option>
        <option value="1">Giao hàng</option>
    </select>
</div>
<div id="shippingLocationInfo" style="display: none;">

    <div class="form-check mb-3">
        <input type="checkbox" class="form-check-input" onchange="isSameAsCustomerAddressChange()"
            checked="@Model.IsSameAsCustomerAddress" id="isSameAsCustomerAddress" />
        <label class="form-check-label ps-1">Giống với thông tin khách hàng</label>
    </div>
    <div style="display: none;" id="shippingAddress">
        <div class="mb-2">
            <label class="form-label">Họ tên người nhận</label>
            <input value="@Model.Name" id="receiverName" class="form-control" type="text" />
            <p class="text-danger" style="display: none" id="receiverNameError">Trường này là bắt buộc</p>
        </div>
        <div class="mb-2">
            <label class="form-label">Số điện thoại</label>
            <input value="@Model.PhoneNumber" id="receiverPhone" class="form-control" type="text" />
            <p class="text-danger" style="display: none" id="receiverPhoneError">Trường này là bắt buộc</p>
        </div>
        <div class="mb-2">
            <label class="form-label">Địa chỉ</label>
            <input value="@Model.Address" id="receiverAddress" class="form-control" type="text" />
            <p class="text-danger" style="display: none" id="receiverAddressError">Trường này là bắt buộc</p>
        </div>
    </div>
</div>
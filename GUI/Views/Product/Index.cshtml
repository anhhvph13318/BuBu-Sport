@model GUI.Models.DTOs.Product_DTO.Views.IndexObject

@{
    ViewData["Title"] = "Index";
}

<h1>Quản lý sản phẩm</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Tạo mới</a>
</p>
<div>
    <form asp-controller="User" asp-action="Index" method="get">
        <p>
            Tìm kiếm: <input type="text" name="s" />
            <input type="submit" class="btn btn-primary" value="Tìm kiếm" />
        </p>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model.PriceNet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model.Code)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Data is not null && Model.Data.LstProduct is not null && Model.Data.LstProduct.Any())
        {
            @foreach (var item in Model.Data.LstProduct)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriceNet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <th>
                        @Html.DisplayNameFor(model => model.Model.Code)
                    </th>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                        @* @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) | *@
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

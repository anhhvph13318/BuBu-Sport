@model GUI.Models.DTOs.Product_DTO.Views.IndexObject

@{
    ViewData["Title"] = "Index";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Nối file CSS -->
    <link rel="stylesheet" href="~/css/product.css">
</head>
<div class="container">
    <h3>Danh sách sản phẩm</h3>
    <hr />
    <p>
        <a asp-action="Create" class="btn btn-success">Tạo mới</a>
    </p>
    <div>
        <form asp-controller="Product" asp-action="Index" method="get" class="d-flex">
            <input type="text" name="s" class="form-control me-2 col-6" placeholder="Tìm kiếm" id="search-input" />
            <input type="submit" class="btn btn-primary" value="Tìm kiếm" />
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Số lượng
                </th>
                <th>
                    Giá bán
                </th>
                <th>
                    Mô tả
                </th>
                <th>
                    Mã sản phẩm
                </th>
                <th>
                    Trạng thái
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Data is not null && Model.Data.LstProduct is not null && Model.Data.LstProduct.Any())
            {
                @foreach (var item in Model.Data.LstProduct)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                            @* @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) | *@
                            @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>



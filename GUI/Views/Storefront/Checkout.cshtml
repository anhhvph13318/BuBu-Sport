			</div>

			<!-- Order Details -->
			<div class="col-md-5 order-details">
				<div class="section-title text-center">
					<h3 class="title">Đơn của bạn</h3>
				</div>
				<div class="order-summary">
					<div class="order-col">
						<div><strong>Sản phẩm</strong></div>
						<div><strong>TỔNG</strong></div>
					</div>
					<div class="order-products">
						@if (Model != null && Model.Any())
						{
							foreach(var item in Model)
							{
								<div class="order-col">
									<div>@item.Quantity x @item.NameProduct <span class="remove-item" data-itemId="@item.CartDetailID">x</span></div>
									<div>@(item.Quantity * item.Price)</div>
								</div>
							}
						}
					</div>
					<div class="order-col">
						<div>Shiping</div>
						<div><strong>0</strong></div>
					</div>
					<div class="order-col">
						<div><strong>TỔNG</strong></div>
						<div><strong class="order-total">@ViewBag.Sum</strong></div>
					</div>
				</div>
				<div class="payment-method">
					<div class="input-radio">
						<input type="radio" checked name="payment" id="payment-1">
						<label for="payment-1">
							<span></span>
							C.O.D.
						</label>
						<div class="caption">
							<p>Thanh toán khi nhận hàng.</p>
						</div>
					</div>
